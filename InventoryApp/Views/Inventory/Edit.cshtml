@model InventoryViewModel
@{
    ViewData["Title"] = "Edit a Inventory";
}

<h3>@ViewData["Title"]</h3>

<form asp-controller="Inventory" asp-action="Edit" asp-route-id="@Model.ActiveInventory.InventoryId" method ="post" enctype="application/x-www-form-urlencoded" >
    
    <div class="text-danger" asp-validation-summary="All"></div>

    <input type="hidden" asp-for="ActiveInventory.InventoryId"/>


    <div class="form-group">
        <label asp-for="ActiveInventory.ProductContent">Products</label>
        <input type="text" asp-for="ActiveInventory.ProductContent" class="form-control" />
        
    </div>
    
    <div class="form-group">
        <label asp-for="ActiveInventory.DataOfInventory">Data Of Inventory</label>
        <input type="date" asp-for="ActiveInventory.DataOfInventory" class="form-control" />
  </div>

    <div class="form-group">
        <label asp-for="ActiveInventory.Quantity">Quantity</label>
        <input class="form-control" type="number" asp-for="ActiveInventory.Quantity"/>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>

    <a asp-controller="Inventory" asp-action="Items" class=" btn btn-danger">Cancel</a>
</form>
