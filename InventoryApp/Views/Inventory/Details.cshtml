@model InventoryViewModel
@{
    ViewData["Title"] = "Item Details";
}

<h3>@ViewData["Title"]</h3>

<p> <a asp-controller="Inventory" asp-action="Items">All Items</a> || <a asp-controller="Inventory" asp-action="Edit" asp-route-id="@Model.ActiveInventory.InventoryId">Edit This Item </a> ||  <a asp-controller="Inventory" asp-action="Add">Add New Item </a></p>

<form asp-controller="Inventory" asp-action="Details" asp-route-id="@Model.ActiveInventory.InventoryId" method ="post" enctype="application/x-www-form-urlencoded" >
     
    <div class="form-group">
        <label asp-for="ActiveInventory.ProductContent">Products</label>
        <input type="text" asp-for="ActiveInventory.ProductContent" class="form-control" />      
    </div>
    
    <div class="form-group">
        <label asp-for="ActiveInventory.DataOfInventory">Data Of Inventory</label>
        <input type="date" asp-for="ActiveInventory.DataOfInventory" class="form-control" />
  </div>
    <div class="form-group">
        <label asp-for="ActiveInventory.Quantity">Quantity</label>
        <input class="form-control" type="number" asp-for="ActiveInventory.Quantity"/>
    </div>

</form>
